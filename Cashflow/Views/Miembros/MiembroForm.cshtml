@model Cashflow.Models.Miembro

@{
    ViewBag.Title = "Miembro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Id == 0)
{
    <h2 class="text-center">Nuevo Miembro</h2>
}
else
{
    <h2 class="text-center">Editar</h2>
}


<div class="row">
<div class="col-md-6 col-md-offset-3">
@using (Html.BeginForm("Save", "Miembros"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Nombre)
        @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.FechaNacimiento)
        <div class='input-group date' id='datetimepicker1'>
            @Html.TextBoxFor(m => m.FechaNacimiento, "{0:MM/dd/yy}", new { @class = "form-control" })
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
        </div>
    </div>

    @Html.HiddenFor(m => m.Id)

    <div class="text-center">
        <button type="submit" class="btn btn-green">Guardar</button>
    </div>
}
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/datetime/scripts")
    <script type="text/javascript">


        $(function () {
            $('#datetimepicker1').datetimepicker({
                format: 'MM/DD/YY'
//                defaultDate: new Date(date)
            });
        });

    </script>
}